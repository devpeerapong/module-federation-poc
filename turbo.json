{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/**", "build/**"]
    },
    "dev": {
      "dependsOn": ["shared#build"],
      "cache": false,
      "persistent": true
    },
    "serve": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
